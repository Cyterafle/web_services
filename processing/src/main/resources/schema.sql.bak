CREATE TABLE Customer(
    id UUID PRIMARY KEY,
    name VARCHAR(250) NOT NULL,
    surname VARCHAR(250) NOT NULL,
    mail VARCHAR(250) UNIQUE NOT NULL
);

CREATE TABLE Claim(
    id UUID PRIMARY KEY,
    customer_id UUID REFERENCES Customer,
    policy_number VARCHAR(10) NOT NULL,
    claim_type VARCHAR(250) NOT NULL,
    claimed_amount INTEGER NOT NULL,
    description VARCHAR(500) NOT NULL
);


